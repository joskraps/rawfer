@page "/"

@inherits Rawfer.Client.Logic.RawferAppComponent

@inject IUriHelper Helper;


@if (State.User != null)
{
    <div>Welcome @State.User.Username</div>
} else
{
    <div class="auth-page">
        <div class="container-flex text-center">
            <div class="row">
                <div class="col">
                    <h1 class="text-xs-center">Sign in</h1>
                    <p class="text-xs-center">
                        <a href="/signup">Need an account?</a>
                    </p>
                    <LoginClassic />
                    <LoginExternal />
                </div>
            </div>
        </div>
    </div>
}


@functions{

}
